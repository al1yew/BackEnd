@model ResetPasswordVM

<h1>Reset Password</h1>

<section class="register-area pt-10 mt-5">
    <div class="container-fluid custom-container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-6 h-75">
                <div class="login-register-wrapper mt-30">
                    <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
                    <form method="post">
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="Password">
                            <span class="text text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                            <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div class="single-form">
                            <button class="btn btn-block btn-warning">Reset Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Script
{
    <partial name="_ValidationPartial">
}
