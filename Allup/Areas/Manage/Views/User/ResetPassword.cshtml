@model ResetPasswordVM

<h1>Reset Password</h1>

<section class="register-area pt-10">
    <div class="container-fluid custom-container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-register-wrapper mt-30">
                    <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
                    <form method="post">
                        <div class="single-form">
                            <input asp-for="Password" placeholder="Username">
                            <span class="text text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="single-form">
                            <input asp-for="ConfirmPassword" placeholder="Password">
                            <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div class="single-form">
                            <button class="main-btn main-btn-2">Reset Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Script
{
    <partial name="_ValidationPartial">
}
