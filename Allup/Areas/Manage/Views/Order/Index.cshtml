@model PageNatedLisd<Order>
    @{
        ViewData["Title"] = "Index";

        //int no = 1;
    }
    <div class="row justify-content-between">
        <div class="col-lg-2">
            <h1>Brands</h1>
        </div>
        <div class="col-lg-6">
            <form>
                <div class="row">
                    <div class="col">
                        <label class="form-label">Order Statusu</label>
                        <select name="status" class="form-select" aria-label="Default select example">
                            @if (ViewBag.Status == 0)
                            {
                                <option selected value="0">All</option>
                            }
                            else
                            {
                                <option value="0">All</option>
                            }

                            @if (ViewBag.Status == 1)
                            {
                                <option selected value="1">Silinenler</option>
                            }
                            else
                            {
                                <option value="1">Silinenler</option>
                            }

                            @if (ViewBag.Status == 2)
                            {
                                <option selected value="2">Silinmiyenler</option>
                            }
                            else
                            {
                                <option value="2">Silinmiyenler</option>
                            }
                        </select>
                    </div>
                    <div class="col">
                        <button class="btn btn-primary" type="submit">Filter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 tblContent">
            @await Html.PartialAsync("_OrderIndexPartial", Model)
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @if (Model.HasPrev)
                    {
                        <li class="page-item"><a class="page-link" asp-area="manage" asp-controller="order" asp-action="index" asp-route-status="@ViewBag.Status" asp-route-page="1">@("<<")</a></li>

                        <li class="page-item"><a class="page-link" asp-area="manage" asp-controller="order" asp-action="index" asp-route-status="@ViewBag.Status" asp-route-page="@(Model.Page-1)">@("<")</a></li>
                    }
                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                        <li class="page-item @(Model.Page == i ? "active":"")"><a class="page-link" asp-area="manage" asp-controller="order" asp-action="index" asp-route-status="@ViewBag.Status" asp-route-page="@i">@i</a></li>
                    }
                    @if (Model.HasNext)
                    {
                        <li class="page-item"><a class="page-link" asp-area="manage" asp-controller="order" asp-action="index" asp-route-status="@ViewBag.Status" asp-route-page="@(Model.Page+1)">@(">")</a></li>
                        <li class="page-item"><a class="page-link" asp-area="manage" asp-controller="order" asp-action="index" asp-route-status="@ViewBag.Status" asp-route-page="@Model.PageCount">@(">>")</a></li>
                    }
                </ul>
            </nav>
        </div>
    </div>
