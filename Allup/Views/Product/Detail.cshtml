@model Product

@{
    ViewData["Title"] = "Detail";
}

<!--====== Breadcrumb Part Start ======-->

<div class="breadcrumb-area">
    <div class="container-fluid custom-container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">Shop</a></li>
                <li class="breadcrumb-item active">Product Details</li>
            </ol>
        </nav>
    </div> <!-- container -->
</div>

<!--====== Breadcrumb Part Ends ======-->
<!--====== Single Product Part Start ======-->

<section class="single-product-page pt-20">
    <div class="container-fluid custom-container">
        <div class="row">
            <div class="col-lg-6">
                <div class="single-product-image mt-30">
                    <div class="product-single-image">
                        @foreach (ProductImage productImage in Model.ProductImages)
                        {
                            <div class="single-image">
                                <img src="~/assets/images/@productImage.Image" alt="">
                            </div>
                        }
                    </div>
                    <div class="product-single-thumb-image">
                        <ul class="product-single-thumb">
                            @foreach (ProductImage productImage in Model.ProductImages)
                            {
                                <li><img src="~/assets/images/@productImage.Image" alt="product"></li>
                            }
                        </ul>
                    </div>
                </div> <!-- single product image -->
            </div>
            <div class="col-lg-6">
                <div class="single-product-content mt-30">
                    <div class="tags d-flex">
                        <span class="tag-title">Tags:</span>
                        <ul class="tag-list media-body">
                            @foreach (ProductToTag productTag in Model.ProductToTags)
                            {
                                <li><a>@productTag.Tag.TagName</a></li>
                            }
                        </ul>
                    </div>
                    <h2 class="product-title">@Model.ProductName</h2>
                    <div class="review-rating d-flex flex-wrap">
                        <ul class="rating">
                            <li class="rating-on"><i class="fas fa-star"></i></li>
                            <li class="rating-on"><i class="fas fa-star"></i></li>
                            <li class="rating-on"><i class="fas fa-star"></i></li>
                            <li class="rating-on"><i class="fas fa-star"></i></li>
                            <li class="rating-on"><i class="fas fa-star"></i></li>
                        </ul>
                        <ul class="review-link">
                            <li><a>(1 Review)</a></li>
                            <li><a>Write A Review</a></li>
                        </ul>
                    </div>
                    <div class="product-price">
                        @if (Model.DiscountPrice > 0)
                        {
                            <span class="price-sale">€@Model.DiscountPrice</span>
                            <span class="regular-price">€@Model.Price</span>
                        }
                        else
                        {
                            <span class="price-sale">€@Model.Price</span>
                        }
                    </div>
                    <div class="product-basic-info">
                        <div class="single-info">
                            <span class="title">Ex Tax :</span>
                            <span class="value">€@Model.ExTax</span>
                        </div>
                        <div class="single-info">
                            <span class="title">Brand :</span>
                            <span class="value"><a>@Model.Brand</a></span>
                        </div>
                        <div class="single-info">
                            <span class="title"> Product Code :</span>
                            <span class="value">@(Model.Seria + Model.Code)</span>
                        </div>
                        <div class="single-info">
                            <span class="title @(Model.Count > 0 ?"text-success":"text-danger")"> Availability :</span>
                            <span class="value">@(Model.Count > 0 ? "In Stock" : "Out Of Stock") </span>
                        </div>
                    </div>
                    <p>@Html.Raw(Model.Description)</p>

                    <div class="product-size-color-quantity">
                        <div class="product-quantity mt-25">
                            <h5 class="title">Quantity</h5>
                            <div class="quantity mt-15 d-flex">
                                <button type="button" class="sub"><i class="fal fa-minus"></i></button>
                                <input type="text" value="1" />
                                <button type="button" class="add"><i class="fal fa-plus"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="addcart">
                        <button><i class="icon ion-bag"></i> Add to cart</button>
                    </div>
                    <div class="product-wishlist-compare">
                        <ul class="d-flex flex-wrap">
                            <li><a><i class="fal fa-heart"></i> Add to wishlist</a></li>
                            <li><a><i class="fal fa-repeat"></i> Add to compare</a></li>
                        </ul>
                    </div>
                    <div class="product-share d-flex">
                        <p>Share</p>
                        <ul class="social media-body">
                            <li><a><i class="fab fa-facebook-f"></i></a></li>
                            <li><a><i class="fab fa-twitter"></i></a></li>
                            <li><a><i class="fab fa-google"></i></a></li>
                            <li><a><i class="fab fa-pinterest-p"></i></a></li>
                        </ul>
                    </div>
                    <div class="reassurance-block">
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="single-reassurance d-flex">
                                    <div class="reassurance-icon">
                                        <img src="~/assets/images/icon-1.png" alt="icon">
                                    </div>
                                    <div class="reassurance media-body">
                                        <p>Security policy (edit with Customer reassurance module)</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="single-reassurance d-flex">
                                    <div class="reassurance-icon">
                                        <img src="~/assets/images/icon-2.png" alt="icon">
                                    </div>
                                    <div class="reassurance media-body">
                                        <p>Delivery policy (edit with Customer reassurance module)</p>
