        <div class="row">
            <div class="col-xl-8">
                <div class="shopping-cart mt-25">
                    <h4 class="allup-title">Shopping Cart</h4>

                    <div class="shopping-cart-table table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="image">Image</th>
                                    <th class="product">Product</th>
                                    <th class="price">Price</th>
                                    <th class="quantity">Quantity</th>
                                    <th class="total">Total</th>
                                    <th class="delete">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="product-image">
                                            <img src="~/assets/images/product-cart/cart-1.jpg" alt="cart">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="product-title">
                                            <h4 class="title"><a asp-controller="Product" asp-action="Index">New Balance Fresh Foam LAZR v1 Sport eu accumsan massa facilisis</a></h4>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="product-price">
                                            <span class="price">€18.90</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="product-quantity">
                                            <div class="quantity mt-15 d-flex">
                                                <button type="button" class="sub"><i class="fal fa-minus"></i></button>
                                                <input type="text" value="1" />
                                                <button type="button" class="add"><i class="fal fa-plus"></i></button>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="product-total">
                                            <span class="total-amount">€18.90</span>
                                        </div>
                                    </td>
                                    <td>
