<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        a {
            color: blueviolet;
            font-size: 25px;
            text-decoration: none;
        }

        li {
            list-style: disc;
        }

        .main {
            align-items: center;
            justify-content: center;
            display: flex;
            height: 100vh;
            width: 100%;
        }
        h1 {
            text-align: center;
            width: 100%;
        }
    </style>
</head>

<body>
    <h1>
        Welcome to our Car model List!
    </h1>
    <div class="main">

        @RenderBody()
    </div>
</body>
</html>
